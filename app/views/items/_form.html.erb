<%= form_with(model: item, local: true) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <div>
      <%= form.label :name %>
    </div>
    <div>
      <%= form.text_field :name, placeholder: "Enter Item Name", id: :item_name %>
    </div>
  </div>

  <div class="field">
    <div>
      <%= form.label :tag_name %>
    </div>
    <div>
      <%= form.text_area :body, placeholder: "Enter Tag Name eg- #veg #indian", id: :item_body %>
    </div>
  </div>
        

  <div class="field">
    <div>
    <%= form.label :price %>
    </div>
    <div>
    <%= form.number_field :price, id: :item_price %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
